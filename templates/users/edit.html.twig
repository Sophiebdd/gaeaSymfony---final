{% extends 'base.html.twig' %}
{% block title "Modifier l'utilisateur: " ~ user.nom ~ " " ~ user.prenom %}

{% block body %}
    <h1>{{ user.nom }} {{ user.prenom }}</h1>
    {{ form_start(form) }}
        <div class="d-flex">
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
        </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
